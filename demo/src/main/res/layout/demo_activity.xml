<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qxtx.idea.idearecyclerviewDemo.DemoActivity">

    <Button
        android:id="@+id/btnAddListData"
        android:text="添加数据"
        android:layout_width="100dp"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/btnAddItemAction"
        android:text="添加行为"
        android:layout_toRightOf="@+id/btnAddListData"
        android:layout_width="100dp"
        android:layout_height="50dp"/>


    <com.qxtx.idea.idearecyclerview.view.IdeaRecyclerView
        android:id="@+id/rvList"
        android:layout_below="@+id/btnAddListData"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
